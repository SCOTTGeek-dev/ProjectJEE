<script>
    // Fonction pour ajouter une classe lorsqu'un champ de formulaire est sélectionné
    function onFocus(element) {
        element.parentNode.classList.add('focused');
    }

    // Fonction pour supprimer la classe lorsque le champ de formulaire perd le focus
    function onBlur(element) {
        if (element.querySelector('input').value === '') {
            element.classList.remove('focused');
        }
    }
</script>
